<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfo"
    android:id="@+id/drawer_layout"
    android:background="#ceeebb">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_open"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/menu" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="?attr/actionModeCloseDrawable"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="663dp" />

        <Button
            android:id="@+id/btn_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/home"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="663dp" />

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="#E91E63"
            android:text="수정"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="293dp"
            tools:layout_editor_absoluteY="164dp" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="19960822"
            android:inputType="date"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="240dp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="210dp"
            android:layout_height="47dp"
            android:ems="10"
            android:hint="forybh@naver.com"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="187dp"
            tools:layout_editor_absoluteY="314dp" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="01086514720"
            android:inputType="phone"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="385dp" />

        <EditText
            android:id="@+id/editTextPhone2"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="01051410551"
            android:inputType="phone"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="465dp" />

        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:hint="공황장애"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="537dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="72dp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="144dp"
            tools:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용자정보"
            android:textColor="#000000"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="50dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김 O O"
            android:textSize="36sp"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="166dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생년월일"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="240dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="307dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴대전화"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="385dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보호자 전화"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="458dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="병명"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="529dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/activity_drawer_user_info" />


</androidx.drawerlayout.widget.DrawerLayout>