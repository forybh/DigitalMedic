<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layoutshape"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/user2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_notice"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/bell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ViewFlipper
        android:id="@+id/btn_center"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/dep_1"
            android:clickable="true"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:src="@drawable/dep_1_match_removebg" />

        <ImageView
            android:id="@+id/dep_2"
            android:clickable="true"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:src="@drawable/dep_2_match_removebg"/>

        <ImageView
            android:id="@+id/dep_3"
            android:clickable="true"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:src="@drawable/dep_3_match_removebg"/>

        <ImageView
            android:id="@+id/panic_breath"
            android:clickable="true"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:background="@drawable/buttonshape2"
            android:src="@drawable/breath"/>

        <Button
            android:id="@+id/btn_mission"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:background="@drawable/buttonshape2"
            android:text="오늘의 미션                                       명언 따라적기, 호흡법 익히기, 산책 10분 하기"
            android:textColor="#000000"
            android:textSize="18sp"
            />
        <Button
            android:id="@+id/btn_gotest"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:background="@drawable/buttonshape2"
            android:text="최근 자가진단 날짜 : 9일전                                       자가진단테스트 하러 가기"
            android:textColor="#000000"
            android:textSize="24sp"
            />

    </ViewFlipper>

    <Button
        android:id="@+id/btn_chatting"

        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="25dp"

        android:background="@drawable/chatbot"
        android:shadowColor="#A3A3A3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_video"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toEndOf="@+id/btn_test"
        app:layout_constraintTop_toBottomOf="@+id/btn_center" />

    <Button
        android:id="@+id/btn_chart"

        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"

        android:layout_marginBottom="40dp"
        android:background="@drawable/chart"
        android:shadowColor="#A3A3A3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_instruction"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toEndOf="@+id/btn_attend"
        app:layout_constraintTop_toBottomOf="@+id/btn_chatting" />

    <Button
        android:id="@+id/btn_instruction"

        android:layout_width="95dp"
        android:layout_height="95dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/howto"
        android:shadowColor="#A3A3A3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_chart"
        app:layout_constraintTop_toBottomOf="@+id/btn_video" />

    <Button
        android:id="@+id/btn_attend"

        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/attend"
        android:shadowColor="#A3A3A3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_chart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_test" />

    <Button
        android:id="@+id/btn_test"

        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"

        android:layout_marginTop="25dp"
        android:background="@drawable/test"
        android:shadowColor="#A3A3A3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_chatting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_center" />

    <Button
        android:id="@+id/btn_video"

        android:layout_width="95dp"
        android:layout_height="95dp"

        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/mind"
        android:shadowColor="#A3A3A3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_chatting"
        app:layout_constraintTop_toBottomOf="@+id/btn_center" />

    <Button
        android:id="@+id/button5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="256dp"
        android:background="@drawable/left"
        app:layout_constraintEnd_toStartOf="@+id/btn_center"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/btn_center"
        app:layout_constraintTop_toBottomOf="@+id/btn_notice" />



</androidx.constraintlayout.widget.ConstraintLayout>
