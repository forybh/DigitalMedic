<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layoutshape"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/user2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_notice"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/bell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ViewFlipper
        android:id="@+id/btn_center"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/sudoku_click"
            android:clickable="true"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:background="@drawable/buttonshape2"
            android:src="@drawable/sdoku" />

        <ImageView
            android:id="@+id/number_click"
            android:clickable="true"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:background="@drawable/buttonshape2"
            android:src="@drawable/match_number"/>

        <ImageView
            android:id="@+id/picture_click"
            android:clickable="true"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:background="@drawable/buttonshape2"
            android:src="@drawable/match_picture"/>

        <Button
            android:id="@+id/btn_mission"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:background="@drawable/buttonshape2"
            android:text="오늘의 미션                                       게임 3판, 자가진단 테스트하기, 오늘 있었던 일 적기"
            android:textColor="#000000"
            android:textSize="18sp"
            />
        <Button
            android:id="@+id/btn_gotest"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:background="@drawable/buttonshape2"
            android:text="최근 자가진단 날짜 : 9일전                                       자가진단테스트 하러 가기"
            android:textColor="#000000"
            android:textSize="24sp"
            />

    </ViewFlipper>


    <Button
        android:id="@+id/btn_game"

        android:layout_width="95dp"
        android:layout_height="95dp"

        android:layout_marginTop="25dp"
        android:background="@drawable/game"
        android:shadowColor="#A3A3A3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_sos"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toEndOf="@+id/btn_test"
        app:layout_constraintTop_toBottomOf="@+id/btn_center" />

    <Button
        android:id="@+id/btn_chart"

        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"

        android:layout_marginBottom="40dp"
        android:background="@drawable/chart"
        android:shadowColor="#A3A3A3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_instruction"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_attend"
        app:layout_constraintTop_toBottomOf="@+id/btn_game"
        app:layout_constraintVertical_bias="0.444" />

    <Button
        android:id="@+id/btn_instruction"

        android:layout_width="95dp"
        android:layout_height="95dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/howto"
        android:shadowColor="#A3A3A3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_chart"
        app:layout_constraintTop_toBottomOf="@+id/btn_sos"
        app:layout_constraintVertical_bias="0.428" />

    <Button
        android:id="@+id/btn_attend"

        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/attend"
        android:shadowColor="#A3A3A3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_chart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_test"
        app:layout_constraintVertical_bias="0.444" />

    <Button
        android:id="@+id/btn_test"

        android:layout_width="95dp"
        android:layout_height="95dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/test"
        android:shadowColor="#A3A3A3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_center" />

    <Button
        android:id="@+id/btn_sos"

        android:layout_width="95dp"
        android:layout_height="95dp"

        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/sos"
        android:shadowColor="#A3A3A3"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_game"
        app:layout_constraintTop_toBottomOf="@+id/btn_center" />

    <Button
        android:id="@+id/button5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="256dp"
        android:background="@drawable/left"
        app:layout_constraintEnd_toStartOf="@+id/btn_center"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/btn_center"
        app:layout_constraintTop_toBottomOf="@+id/btn_notice" />


</androidx.constraintlayout.widget.ConstraintLayout>
